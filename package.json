{
  "name": "liquidator-api",
  "version": "0.0.1",
  "description": "Liquidator API",
  "author": "Oleksandr Petryk <sachapos50@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format:write": "prettier --cache --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format": "prettier --cache --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test,jest}/**/*.ts\" --fix",
    "lint": "eslint \"{src,apps,libs,test,jest}/**/*.ts\"",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test": "jest --config ./jest.config.ts",
    "db:migrations:generate": "drizzle-kit generate --config ./drizzle.config.ts",
    "db:migrate": "dotenv -e .env -- drizzle-kit migrate --config ./drizzle.config.ts",
    "docker:local:start": "docker compose --project-name liquidator-local -f ./docker/local/docker-compose.yml up -d"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/session": "^11.1.0",
    "@fastify/static": "^8.1.1",
    "@nestjs/common": "^11.1.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.0",
    "@nestjs/platform-express": "^11.1.0",
    "@nestjs/platform-fastify": "^11.1.0",
    "@nestjs/swagger": "^11.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "ioredis": "^5.6.1",
    "kafkajs": "^2.2.4",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.9",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.0",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "@types/pg": "^8.15.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-stats": "^1.0.1",
    "jest": "^29.7.0",
    "jest-json-schema-extended": "^1.0.1",
    "jest-runner-groups": "^2.2.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
